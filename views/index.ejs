<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>WhatsApp Moderation Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
  <h1 class="text-3xl font-bold text-green-700 mb-4">ðŸ“Š Moderation Dashboard</h1>
  <table class="w-full border-collapse bg-white rounded shadow">
    <thead class="bg-green-600 text-white">
      <tr>
        <th class="p-2">Time</th>
        <th class="p-2">Type</th>
        <th class="p-2">User</th>
        <th class="p-2">Number</th>
        <th class="p-2">Group</th>
        <th class="p-2">Message</th>
      </tr>
    </thead>
    <tbody>
      <% actions.slice().reverse().forEach(a => { %>
        <tr class="border-b hover:bg-gray-50">
          <td class="p-2"><%= a.time %></td>
          <td class="p-2 text-red-600 font-semibold"><%= a.type %></td>
          <td class="p-2"><%= a.user %></td>
          <td class="p-2"><%= a.number %></td>
          <td class="p-2"><%= a.chatName || '-' %></td>
          <td class="p-2"><%= a.message || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
 
